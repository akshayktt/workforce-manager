{
  "version": 2,
  "name": "workforce-manager",
  "public": false,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "server/**/*.ts",
        "excludeFiles": "node_modules/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "functions": {
    "server/index.ts": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}
